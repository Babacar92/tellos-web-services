<!DOCTYPE html>
<html lang="en" style="background-color: #ebebed;">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body style="background-color: #ebebed;">
        <table border="0" align="center" width="100%">
            <caption>
                <h1>
                    Liste des qualifications
                </h1>
            </caption>
            <tr>
                    {{#if header.employee_c}}<th bgcolor="#fff" height="50px">{{header.employee_c}}</th>{{/if}}
                    {{#if header.number_c}}<th bgcolor="#fff" height="50px">{{header.number_c}}</th>{{/if}}
                    {{#if header.type_c}}<th bgcolor="#fff" height="50px">{{header.type_c}}</th>{{/if}}
                    {{#if header.qualification_c}}<th bgcolor="#fff" height="50px">{{header.qualification_c}}</th>{{/if}}
                    {{#if header.delivery_c}}<th bgcolor="#fff" height="50px">{{header.delivery_c}}</th>{{/if}}
                    {{#if header.validity_c}}<th bgcolor="#fff" height="50px">{{header.validity_c}}</th>{{/if}}
                    {{#if header.deadline_c}}<th bgcolor="#fff" height="50px">{{header.deadline_c}}</th>{{/if}}
                    {{#if header.comment_c}}<th bgcolor="#fff" height="50px">{{header.comment_c}}</th>{{/if}}
                    {{#if header.status_c}}<th bgcolor="#fff" height="50px">{{header.status_c}}</th>{{/if}}
            </tr>
            {{#each message}}
                <tr>
                    {{#if EMPL}}<td bgcolor="#f6f8fc" height="50px" align="center">{{employee}}</td>{{/if}}
                    {{#if NUMBER}}<td bgcolor="#f6f8fc" height="50px" align="center">{{number}}</td>{{/if}}
                    {{#if TYPE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{type}}</td>{{/if}}
                    {{#if QUALIF}}<td bgcolor="#f6f8fc" height="50px" align="center">{{qualification}}</td>{{/if}}
                    {{#if DELIV}}<td bgcolor="#f6f8fc" height="50px" align="center">{{delivery}}</td>{{/if}}
                    {{#if VALID}}<td bgcolor="#f6f8fc" height="50px" align="center">{{validity}}</td>{{/if}}
                    {{#if DLINE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{deadline}}</td>{{/if}}
                    {{#if COM}}<td bgcolor="#f6f8fc" height="50px" align="center">{{comment}}</td>{{/if}}
                    {{#if STUS}}<td bgcolor="#f6f8fc" height="50px" align="center">{{status}}</td>{{/if}}
                </tr>
            {{/each}}
        </table>

  </body>
</html>