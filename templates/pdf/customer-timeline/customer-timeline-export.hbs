<!DOCTYPE html>
<html lang="en" style="background-color: #ebebed;">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body style="background-color: #ebebed;">
        <table border="0" align="center">
            <caption>
                <h1>
                    Tâches à faire
                </h1>
            </caption>
            <tr>
                    {{#if header.startDate_c}}<th bgcolor="#fff" height="50px">{{header.startDate_c}}</th>{{/if}}
                    {{#if header.client_c}}<th bgcolor="#fff" height="50px">{{header.client_c}}</th>{{/if}}
                    {{#if header.type_c}}<th bgcolor="#fff" height="50px">{{header.type_c}}</th>{{/if}}
                    {{#if header.title_c}}<th bgcolor="#fff" height="50px">{{header.title_c}}</th>{{/if}}
                    {{#if header.description_c}}<th bgcolor="#fff" height="50px">{{header.description_c}}</th>{{/if}}
                    {{#if header.file_c}}<th bgcolor="#fff" height="50px">{{header.file_c}}</th>{{/if}}
                    {{#if header.realise_c}}<th bgcolor="#fff" height="50px">{{header.realise_c}}</th>{{/if}}
            </tr>
            {{#each message}}
                <tr>
                    {{#if SDATE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{startDate}}</td>{{/if}}
                    {{#if CLIENT}}<td bgcolor="#f6f8fc" height="50px" align="center">{{client}}</td>{{/if}}
                    {{#if TYPE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{type}}</td>{{/if}}
                    {{#if TITLE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{title}}</td>{{/if}}
                    {{#if DESC}}<td bgcolor="#f6f8fc" height="50px" align="center">{{description}}</td>{{/if}}
                    {{#if FILE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{file}}</td>{{/if}}
                    {{#if REALISE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{realise}}</td>{{/if}}
                </tr>
            {{/each}}
        </table>

  </body>
</html>