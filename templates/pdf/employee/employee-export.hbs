<!DOCTYPE html>
<html lang="en" style="background-color: #ebebed;">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body style="background-color: #ebebed;">
        <table border="0" align="center" width="100%">
            <caption>
                <h1>
                    Répertoire des salariés
                </h1>
            </caption>
            <tr>
                    {{#if header.lastname}}<th bgcolor="#fff" height="50px">{{header.lastname}}</th>{{/if}}
                    {{#if header.firstname}}<th bgcolor="#fff" height="50px">{{header.firstname}}</th>{{/if}}
                    {{#if header.entity}}<th bgcolor="#fff" height="50px">{{header.entity}}</th>{{/if}}
                    {{#if header.position}}<th bgcolor="#fff" height="50px">{{header.position}}</th>{{/if}}
                    {{#if header.category}}<th bgcolor="#fff" height="50px">{{header.category}}</th>{{/if}}
                    {{#if header.email}}<th bgcolor="#fff" height="50px">{{header.email}}</th>{{/if}}
                    {{#if header.phone}}<th bgcolor="#fff" height="50px">{{header.phone}}</th>{{/if}}
                    {{#if header.state}}<th bgcolor="#fff" height="50px">{{header.state}}</th>{{/if}}
            </tr>
            {{#each message}}
                <tr>
                    {{#if LNAME}}
                        <td bgcolor="#f6f8fc" height="50px" align="center" valign="top">
                            <img src="{{ imgPath 'logo.png' }}" alt="picture" height="50px" width="50px" border-radius="50%">
                            {{lastname}}
                        </td>
                    {{/if}}
                    {{#if FNAME}}<td bgcolor="#f6f8fc" height="50px" align="center">{{firstname}}</td>{{/if}}
                    {{#if ENTITY}}<td bgcolor="#f6f8fc" height="50px" align="center">{{entity}}</td>{{/if}}
                    {{#if POSITION}}<td bgcolor="#f6f8fc" height="50px" align="center">{{position}}</td>{{/if}}
                    {{#if CAT}}<td bgcolor="#f6f8fc" height="50px" align="center">{{category}}</td>{{/if}}
                    {{#if EMAIL}}<td bgcolor="#f6f8fc" height="50px" align="center">{{email}}</td>{{/if}}
                    {{#if PHONE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{phone}}</td>{{/if}}
                    {{#if STATE}}<td bgcolor="#f6f8fc" height="50px" align="center">{{state}}</td>{{/if}}
                </tr>
            {{/each}}
        </table>

  </body>
</html>